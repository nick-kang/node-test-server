{
  "extends": "@sindresorhus/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2021", // Node.js 16
    "lib": ["es2021"],
    "noPropertyAccessFromIndexSignature": false,
    "isolatedModules": true
  },
  "include": ["source", "test", "benchmark"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
